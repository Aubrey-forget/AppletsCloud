.item {
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
}

.item input {
  width: 100%;
  height: auto;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.pics {
  padding: 0 20rpx;
  margin-top: 30rpx;
}

.pics .title {
  margin: 20rpx 0;
}

.photo {
  width: 150rpx;
  height: 150rpx;
}

.photo image {
  width: 100%;
  height: 100%;
}

.pics .idiom {
  width: 500rpx;
  margin: 20rpx 0;
}

.btn {
  width: 80%;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  margin: 100rpx auto 0;
  background-color: rgba(0, 123, 255,0.8);
  color: #fff;
}